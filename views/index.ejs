<html>
  <head>
      <title>Welcome page!</title>
      <link rel="stylesheet" type="text/css" href="/CSS/login.css">
  </head>
  <body>
      <div id="body">
          <div id="enter_div" class="box">
              <form id="Enter_game" action="/play/game" method="POST">
                  <h2>Enter name:</h2>
                  <h4>GAME KEYS: WASD</h4>
                  Game name:<br>
                  <input type="text" name="username"><br>
                  <button type="submit">Enter game!</button>
              </form> 
          </div>
        <div id="login_div" class="box">
            <% include ./partials/login %>
            <form id="login" action="/req/login" method="POST">
                <h2>Login here:</h2>
                Email:<br>
                <input type="email" name="email"><br>
                password:<br>
                <input type="password" name="password"> <br>
                <button type="submit">Login</button>
            </form> 
        </div>
        <div id="Register" class="box">
             <%if(success_msg == ''){ %>
            <form id="register" action="/req/register" method="POST">
                <h2>Register:</h2>
                <% include ./partials/messages %>
                Email:<br>
                <input type="email" name="email"><br>
                username:<br>
                <input type="text" name="name"><br>
                password:<br>
                <input type="password" name="password"> <br>
                Confirm password:<br>
                <input type="password" name="password2"> <br>
                <button type="submit">Register</button>
            </form> 
            <%} else {%>
                <h1>Registered</h1>
            <% } %>    
        </div>
      </div>
  </body>
</html>